{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.tutorial_stone_golem.move": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"transitions": [
						{"move": "q.ground_speed > 0.2"}
					],
					"blend_transition": 0.2
				},
				"move": {
					"animations": ["move"],
					"transitions": [
						{"idle": "q.ground_speed < 0.2"}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}